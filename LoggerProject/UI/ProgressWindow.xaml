<Window
  x:Class="RevitLogger.UI.ProgressWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:RevitLogger.UI"

  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Revit Logger - Progress"
 
  mc:Ignorable="d" Width="407" Height="126" HorizontalAlignment="Left" Initialized="Window_Initialized">
    <Grid>
        <StackPanel>


            <Grid Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />


                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="161*" />
                    <ColumnDefinition Width="226*"/>

                </Grid.ColumnDefinitions>
                <Label BorderThickness="0,0,0,10" Grid.ColumnSpan="2" Margin="0,0,0,30" Grid.RowSpan="2">Log Progress</Label>
                <ProgressBar x:Name="prgbar" Grid.Row="1" Height="30" Width="387" HorizontalAlignment="Left" Foreground="#ff522f" Grid.ColumnSpan="2" Margin="0,28,0,8" Loaded="prgbar_Loaded"/>


            </Grid>
            <Button Content="Button" Click="Button_Click"/>




        </StackPanel>

    </Grid>
</Window>
